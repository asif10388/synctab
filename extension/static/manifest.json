{
  "manifest_version": 3,
  "version": "1.0",
  "name": "SyncTab",
  "description": "An extension that syncs your tabs",

  "action": {
    "default_icon": "assets/sync.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": ["http://localhost:5000/"],

  "permissions": ["tabs", "storage", "scripting", "activeTab"]
}
